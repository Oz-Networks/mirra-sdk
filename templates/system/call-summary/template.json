{
  "id": "system-call-summary",
  "name": "Call Summary Generator",
  "description": "Automatically generates comprehensive summaries for completed voice calls using AI",
  "version": "1.0.0",
  "type": "system-script",
  "category": "automation",
  "runtime": "nodejs18",
  "handler": "handler.js",
  "timeout": 300,
  "memory": 512,
  "environment": {
    "NODE_ENV": "production"
  },
  "permissions": [
    "ai:chat",
    "resources:call"
  ],
  "triggers": [
    {
      "type": "event",
      "eventType": "call.ended",
      "source": "call"
    }
  ],
  "metadata": {
    "systemType": "call-summary-script",
    "scope": "system",
    "author": "Mirra System",
    "tags": ["voice", "ai", "automation", "summary"]
  }
}

