{
  "id": "calendar-scheduling",
  "name": "Calendar Scheduling",
  "description": "Allow visitors to view your availability and book appointments directly on your calendar - fully automated!",
  "version": "1.0.2",
  "category": "productivity",
  "tags": ["calendar", "scheduling", "appointments", "booking"],
  "icon": "https://via.placeholder.com/150",
  "screenshots": [
    "https://via.placeholder.com/800x600"
  ],
  "page": {
    "type": "nextjs",
    "entryPoint": "page.tsx"
  },
  "dependencies": {
    "scripts": [],
    "resources": [
      {
        "id": "google-calendar",
        "name": "Google Calendar"
      }
    ]
  },
  "configurationSchema": [
    {
      "id": "ownerName",
      "type": "string",
      "label": "Your Name",
      "description": "Your name as displayed to visitors (e.g., 'Book a meeting with John')",
      "default": "",
      "required": true,
      "placeholder": "e.g., John Smith"
    },
    {
      "id": "pageName",
      "type": "string",
      "label": "Page Name",
      "description": "The name displayed in the browser tab and shared links",
      "default": "My Calendar",
      "required": true,
      "placeholder": "e.g., Tony's Calendar"
    },
    {
      "id": "timezone",
      "type": "select",
      "label": "Your Timezone",
      "description": "The timezone used for scheduling",
      "default": "America/New_York",
      "options": [
        { "value": "America/New_York", "label": "Eastern Time (ET)" },
        { "value": "America/Chicago", "label": "Central Time (CT)" },
        { "value": "America/Denver", "label": "Mountain Time (MT)" },
        { "value": "America/Los_Angeles", "label": "Pacific Time (PT)" },
        { "value": "America/Phoenix", "label": "Arizona (MST)" },
        { "value": "America/Anchorage", "label": "Alaska (AKT)" },
        { "value": "Pacific/Honolulu", "label": "Hawaii (HST)" },
        { "value": "Europe/London", "label": "London (GMT/BST)" },
        { "value": "Europe/Paris", "label": "Central European (CET)" },
        { "value": "Europe/Berlin", "label": "Berlin (CET)" },
        { "value": "Asia/Tokyo", "label": "Tokyo (JST)" },
        { "value": "Asia/Shanghai", "label": "Shanghai (CST)" },
        { "value": "Asia/Singapore", "label": "Singapore (SGT)" },
        { "value": "Australia/Sydney", "label": "Sydney (AEST)" },
        { "value": "UTC", "label": "UTC" }
      ]
    },
    {
      "id": "primaryColor",
      "type": "color",
      "label": "Primary Color",
      "description": "The main accent color for buttons and highlights",
      "default": "#E37C60"
    },
    {
      "id": "logo",
      "type": "url",
      "label": "Logo URL",
      "description": "URL to your logo image (PNG or JPG recommended)",
      "required": false,
      "placeholder": "https://example.com/logo.png"
    },
    {
      "id": "meetingDuration",
      "type": "select",
      "label": "Default Meeting Duration",
      "description": "The default length for new appointments",
      "default": "30",
      "options": [
        { "value": "15", "label": "15 minutes" },
        { "value": "30", "label": "30 minutes" },
        { "value": "45", "label": "45 minutes" },
        { "value": "60", "label": "1 hour" }
      ]
    },
    {
      "id": "welcomeMessage",
      "type": "string",
      "label": "Welcome Message",
      "description": "A friendly greeting shown to visitors",
      "default": "Book a time with me!",
      "placeholder": "e.g., Let's connect!"
    }
  ],
  "pricing": {
    "setupFee": 0,
    "monthlyFee": 0,
    "estimatedUsageCost": {
      "perUse": 0,
      "perMonth": 0
    }
  }
}

